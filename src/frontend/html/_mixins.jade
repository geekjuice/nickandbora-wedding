//- Mixins

mixin pontanoFont
  link(href='http://fonts.googleapis.com/css?family=Pontano+Sans', rel='stylesheet', type='text/css')

mixin yanoneFont
  link(href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:200', rel='stylesheet', type='text/css')

mixin openFont
  link(href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300', rel='stylesheet', type='text/css')

mixin latoFont
  link(href='//fonts.googleapis.com/css?family=Lato:100,300,400,700',rel='stylesheet',type='text/css')

mixin cardoFont
  link(href='//fonts.googleapis.com/css?family=Cardo:400,700',rel='stylesheet',type='text/css')

mixin stylesheet(file)
  link(rel='stylesheet', href='/css/#{file}.css')

mixin javascript(file)
  script(src='/js/#{file}.js')

mixin googleMaps(key)
  - var key = typeof key === 'undefined' ? '' : key;
  script(src="https://maps.googleapis.com/maps/api/js?key=#{key}")

mixin googleAnalytics(key)
  script.
    if(/^prod/.test(window['#{key}'])){console.log('Analytics Enabled');
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-43397207-2', 'auto');
    ga('send', 'pageview');}

mixin enviro(key)
  script.
    (function(d,u,c,k){if(typeof d!==u&&typeof d.cookie!==u){
    var s=d[c].split(/\s*;\s*/g);for(var n=0;n<s.length;++n){
    var m=s[n].split('=');if(m[0]===k){return window[k]=m[1];}
    continue;}}})(document,'undefined','cookie','#{key}');
